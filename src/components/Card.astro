---
import DynamicImage from './DynamicImage.astro'

interface Props {
  title: string
  body: string
  name: string
}

const { title, body, name } = Astro.props
---

<li class="link-card">
  <a href={'/' + name} data-astro-prefetch>
    <DynamicImage imagePath={`/src/assets/${name}.png`} altText="" className="rounded" name={name} />
    <div class="p-4">
      <h2 class="m-0 text-xl">
        {title}
      </h2>
      <p class="mt-4 text-sm">
        {body}
      </p>
    </div>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 8px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
  }
  .link-card:hover > a {
    opacity: 0.8;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
